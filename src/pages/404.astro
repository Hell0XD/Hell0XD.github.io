---
import Background from "@components/Background.astro";
import Layout from "src/layouts/Layout.astro";
import meme from "@assets/404.jpeg";
---

<Layout title="404">
  <Background>
    <div class="flex h-screen flex-col items-center justify-center">
      <img src={meme} />
      <h1 class="font-bold text-lg mt-5">
        Sadly this website does not contain content with url <i id="url"></i>
      </h1>
      <a class="underline" href="/">Back to portfolio</a>
    </div>
  </Background>
</Layout>

<script>
  const i = document.getElementById("url") as HTMLElement;

  i.textContent = location.pathname;
</script>
