---
import type { HTMLAttributes } from "astro/types";
interface Props extends HTMLAttributes<"div"> {
    marginBottom?: boolean;
}

const { class: className, marginBottom = true, ...rest } = Astro.props;
---

<section
    class:list={[
        "max-w-7xl m-auto min-h-screen md:h-screen  py-3 px-7",
        { "mb-16": marginBottom },
        className,
    ]}
>
    <slot />
</section>
